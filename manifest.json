    "name": "Analytics Preview",
    "version": "0.1",
    "description": "High level page specific analytics overview.",

    // http://developer.chrome.com/extensions/browserAction.html
    /*"browser_action": {
        "default_icon": {
            "19": "icon.png",
            "38": "icon.png"
        },
        "default_title": "Page Analytics",
        "default_popup": "popup.html"
